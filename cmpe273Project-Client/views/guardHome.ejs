<!DOCTYPE html>
<html data-ng-app='guardProfile'>
<head>
<script type="text/javascript"
	src="https://maps.googleapis.com/maps/api/js?key=AIzaSyApNXTf01V3vzNMtRNGYBCxEXEaxAv8fBM">
	
</script>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<link rel='stylesheet' href='bootstrap.min.css' />
<link rel='stylesheet' href='custom.css' />
</head>
<body>
	<div class="row shadow">
		<div class="col-md-4" style="padding-left: 60px;">
			<h3>

				&nbsp; <font color="#157DEC" size="4">Workforce Management
					System</font>
			</h3>
		</div>

	

		<div class="col-md-2" style="margin-top: 20px; margin-bottom: 20px;">
			<label name="firstname">Welcome, Guard</label>
		</div>
	</div>

	<div data-ng-controller='AlertController' data-ng-init="init()" class="row" style="height: 100%">
		<div class="col-md-6  shadow"
			style="margin: 20px;height: 100%;">
			<div class="row">
				<div class="col-md-12 shadow">
					<h4>Alerts Submitted:</h4>
				</div>
				<div data-ng-repeat="x in alertText" class="col-md-12" style="cursor: pointer;">
					//<h4><small>Attempt of Robbery</small></h4>
					{{ x.alert }}
				</div>
				<div class="col-md-12" style="cursor: pointer;">
					<h4><small>Suspiscious Activity arouond the checkpoint</small></h4>
				</div>
				<div class="col-md-12" style="cursor: pointer;">
					<h4><small>Unknown Intruder entering building</small></h4>
				</div>
				<div class="col-md-12" style="cursor: pointer;">
					<h4><small>Parking voilation</small></h4>
				</div>
										
			</div>
			

		</div>
		<div class="col-md-4 shadow"
			style="margin: 20px;height: 100%;">
			<div class="row">
				<div class="col-md-12 shadow">
					<h4>Alert</h4>
				</div>
<div class="col-md-12" style="cursor: pointer;">
	<span>Alert Type:<select name="addAlert-select" data-ng-model="alert">
	<option value="none" selected=""> Select </option>
	<option value="Attempt of Robbery">Attempt of Robbery</option>
	<option value="Suspiscious Activity arouond the checkpoint">Suspiscious Activity arouond the checkpoint</option>
	<option value="Unknown Intruder entering building">Unknown Intruder entering building</option>
	<option value="Parking voilation">Parking voilation</option>
	<option value="other">Other</option>
</select></span>
</div>
<div class="col-md-12" style="cursor: pointer;">
	<span>Severity:<select name="severity-select" data-ng-model="severity">
	<option value="none" selected=""> Select </option>
	<option value="High">High</option>
<option value="Intermediate">Intermediate</option>	
<option value="Low">Low</option>
</select></span>
</div>
<div class="col-md-12" style="cursor: pointer;">
	<span>Status:<select name="status-select" data-ng-model="status">
	<option value="none" selected=""> Select </option>
	<option value="Under Investigation">Under Investigation</option>
	<option value="Resolved">Resolved</option>
</select></span>
</div>
<div class="col-md-12" style="cursor: pointer;">
<span>Date:<input type="text" style="width: 100px;"data-ng-model="date"></span>
</div>
<div class="col-md-12" style="cursor: pointer;">
<span>
<button data-ng-click="onClickAdd()">Submit Alert</button>
</span>
</div>
			</div>
		
		</div>
		<div class="col-md-12" style="cursor: pointer;">
<span> {{check_point_id}}  </span>
<button data-ng-click="onClickSubmit(check_point_id)">Click to check in!</button>
</div>
	</div>
<script>
var guardProfile = angular.module('guardProfile', []);
guardProfile.controller( 'AlertController', function($scope,$http,$location){
  			 console.log("we are in controller alert guard");
   				$scope.onClickAdd = function(){ $http({
   				method: 'POST',
	            url: '/alert/create_alert',
	           	data: {"alert":$scope.alert, "severity":$scope.severity, "status":$scope.status, "date":$scope.date, "client_id_fk":$scope.client_id_fk, "building_id_fk":$scope.building_id_fk}
	           		}).success(function(response){
	           		console.log("We are in sucees of signup");
	   if(response.login == "Success")
	   				{
	           		console.log("Now in Success of insert summary");
	            	 alert("Alert Submitted!");
	        		
	            	}
	            else{
	            		 alert("error! All fields must be Filled");
	          
	            	}
	        }).error(function(error){
	        console.log("we are in error!!");
	            alert("error");
	        });      
	        };
	        
	        //ddddd
	        $scope.init = function () {
			$http({
   				method: 'GET',
	            url: '/getCheckPoint'
	           		}).success(function(response){
	           		console.log("We are in init");
	        $scope.check_point_id=response.check_point_id;
	        $scope.building_id_fk=response.building_id_fk;
	        $scope.client_id_fk=response.client_id_fk;
	        console.log("Result is "+$scope.check_point_id);		
	   	    }).error(function(error){
	        console.log("we are in error!!");
	            alert("error");
	        });        
			};
		/////////////////////////////////
		$scope.onClickSubmit = function(check_point_id){ $http({
   				method: 'GET',
	            url: '/checkpoint/getCheckPoint',
	           	data: {"check_point_id":$scope.check_point_id}
	           		}).success(function(response){
	           		
	            	 alert("You have checked In!");
	            	 $scope.building_id_fk=response.building_id_fk;
	            	 $scope.client_id_fk=response.client_id_fk;

	        }).error(function(error){
	        console.log("we are in error!!");
	            alert("error");
	        });      
	        };
		////////////
		$http({
   				method: 'GET',
	            url: '/alert/list_alert'
	           		}).success(function(response){
	           		console.log("We are in init");
	        $scope.alertText=response.alert;
	        console.log("Result is "+$scope.check_point_id);		
	   	    }).error(function(error){
	        console.log("we are in error!!");
	            alert("error");
	        });        
	        
 			}); 
</script>
</body>
</html>